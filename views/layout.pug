doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    title= `${title}`
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/styles.css')


  body
    block header
        header
            nav(class="navbar navbar-expand-md navbar-dark fixed-top bg-dark")
                a(class="navbar-brand" href="/") Blue Jays
                button(class="navbar-toggler", type="button", data-toggle="collapse", data-target="#navbarCollapse", aria-controls="navbarCollapse", aria-expanded="false", aria-label="Toggle navigation")
                    span(class="navbar-toggler-icon")
                div(class="collapse navbar-collapse" id="navbarCollapse")
                    ul(class="navbar-nav mr-auto")
                        li(class="nav-item")
                            a(class="nav-link", href="/") Home
                        li(class="nav-item")
                            a(class="nav-link", href="/teams") Teams
                        li(class="nav-item")
                            a(class="nav-link", href="/teams/141") Toronto Blue Jays
            
    main(role="main", class="container")
        block content

    block footer
        footer(class="footer")
            div(class="container")
                span(class="text-muted") Project created for job position as Analytics Developer - Toronto Blue Jays

        script(type="text/javascript", src='https://code.jquery.com/jquery-3.3.1.slim.min.js')
        script(type="text/javascript", src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js')
        script(type="text/javascript", src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js')
        script(type="text/javascript", src='/js/code.js')